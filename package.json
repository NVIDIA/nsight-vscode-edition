{
    "name": "nsight-vscode-edition",
    "version": "2024.1.0",
    "displayName": "Nsight Visual Studio Code Edition",
    "description": "CUDA development and debugging support for VS Code",
    "publisher": "nvidia",
    "icon": "nsight-128.png",
    "readme": "README.md",
    "author": {
        "name": "NVIDIA"
    },
    "engines": {
        "vscode": "^1.76.0"
    },
    "extensionPack": [
        "ms-vscode.cpptools"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/NVIDIA/nsight-vscode-edition.git"
    },
    "bugs": {
        "type": "git",
        "url": "https://github.com/NVIDIA/nsight-vscode-edition/issues"
    },
    "homepage": "https://developer.nvidia.com/nsight-visual-studio-code-edition",
    "keywords": [
        "CUDA",
        "CUDA C++",
        "GPGPU",
        "NVIDIA"
    ],
    "categories": [
        "Debuggers",
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:cuda.changeDebugFocus",
        "onCommand:cuda.pickProcess",
        "onDebug",
        "onLanguage:cuda-cpp",
        "onUri",
        "workspaceContains:**/*.cu"
    ],
    "main": "./dist/extension",
    "contributes": {
        "taskDefinitions": [
            {
                "type": "shell",
                "required": [
                    "type",
                    "command",
                    "label"
                ],
                "properties": {
                    "label": {
                        "type": "string"
                    },
                    "command": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "host": {
                        "type": "string"
                    },
                    "port": {
                        "type": "string"
                    },
                    "executable": {
                        "type": "string"
                    },
                    "remoteExecutable": {
                        "type": "string"
                    },
                    "executableBinaryName": {
                        "type": "string"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "cuda.changeDebugFocus",
                "title": "Change CUDA debug focus",
                "category": "CUDA"
            }
        ],
        "variables": {
            "cuda.pickProcess": "cuda.pickProcess"
        },
        "breakpoints": [
            {
                "language": "c"
            },
            {
                "language": "cpp"
            },
            {
                "language": "cuda"
            },
            {
                "language": "cuda-cpp"
            }
        ],
        "debuggers": [
            {
                "type": "cuda-gdb",
                "label": "CUDA C++ (CUDA-GDB)",
                "languages": [
                    "c",
                    "cpp",
                    "cuda-cpp"
                ],
                "program": "./out/debugger/cudaGdbAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "type": "object",
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "debuggerPath": {
                                "type": "string",
                                "description": "The path to cuda-gdb. If unspecified, the path will be searched for cuda-gdb.",
                                "default": "/usr/local/cuda/bin/cuda-gdb"
                            },
                            "miDebuggerPath": {
                                "type": "string",
                                "description": "The path to cuda-gdb. If unspecified, the path will be searched for cuda-gdb.",
                                "default": "/usr/local/cuda/bin/cuda-gdb"
                            },
                            "program": {
                                "type": "string",
                                "description": "Path to the program to debug.",
                                "default": "${workspaceFolder}/a.out"
                            },
                            "args": {
                                "type": ["string", "array"], 
                                "description": "Command-line arguments to pass to the debuggee.",
                                "default": ""
                            },
                            "miDebuggerArgs": {
                                "type": ["string", "array"],
                                "description": "Command-line arguments to pass to the debuggee.",
                                "default": ""
                            },
                            "verboseLogging": {
                                "type": "boolean",
                                "description": "Produce verbose log output.",
                                "default": false
                            },
                            "logFile": {
                                "type": "string",
                                "description": "Absolute path to the file to log interaction with cuda-gdb.",
                                "default": "${workspaceFolder}/log.txt"
                            },
                            "initCommands": {
                                "type": "array",
                                "description": "List of GDB commands sent before starting inferior.",
                                "items": {
                                    "type": "string"
                                },
                                "default": []
                            },
                            "stopAtEntry": {
                                "type": "boolean",
                                "description": "Break on the first instruction of the debuggee.",
                                "default": false
                            },
                            "breakOnLaunch": {
                                "type": "boolean",
                                "description": "Break on the first instruction of every launched kernel.",
                                "default": false
                            },
                            "onAPIError": {
                                "type": "string",
                                "enum": [
                                    "hide",
                                    "ignore",
                                    "stop"
                                ],
                                "description": "Return a warning if any driver API or runtime API indicates an error.",
                                "default": "hide"
                            },
                            "envFile": {
                                "type": "string",
                                "description": "Absolute path to a file containing VAR=VALUE lines to specify environment variables.",
                                "default": ""
                            },
                            "environment": {
                                "type": "array",
                                "description": "Array containing objects that specify environment variables.",
                                "default": "{}",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "cwd": {
                                "type": "string",
                                "description": "The current working directory (cwd) for the debuggee process.",
                                "default": ""
                            },
                            "sysroot": {
                                "type": "string",
                                "description": "Local directory with copies of target libraries.",
                                "default": ""
                            },
                            "additionalSOLibSearchPath": {
                                "type": "string",
                                "description": "Directory where the debugger searches for shared libraries.",
                                "default": ""
                            },
                            "testMode": {
                                "type": "boolean",
                                "description": "Runs Nsight Visual Studio Code edition in test mode.",
                                "default": false
                            }
                        }
                    },
                    "attach": {
                        "type": "object",
                        "required": [],
                        "properties": {
                            "debuggerPath": {
                                "type": "string",
                                "description": "The path to cuda-gdb. If unspecified, the path will be searched for cuda-gdb.",
                                "default": "/usr/local/cuda/bin/cuda-gdb"
                            },
                            "miDebuggerPath": {
                                "type": "string",
                                "description": "The path to cuda-gdb. If unspecified, the path will be searched for cuda-gdb.",
                                "default": "/usr/local/cuda/bin/cuda-gdb"
                            },
                            "program": {
                                "type": "string",
                                "description": "Path to the program to debug.",
                                "default": "${workspaceFolder}/a.out"
                            },
                            "port": {
                                "type": "number",
                                "description": "Port to use when attaching."
                            },
                            "processId": {
                                "anyOf": [
                                    {
                                        "type": "number",
                                        "default": "${command:cuda.pickProcess}",
                                        "description": "The pid of the process to attach to."
                                    },
                                    {
                                        "type": "string",
                                        "default": "${command:cuda.pickProcess}",
                                        "description": "The pid of the process to attach to."
                                    }
                                ]
                            },
                            "args": {
                                "type": ["string", "array"],
                                "description": "Command-line arguments to pass to the debuggee.",
                                "default": ""
                            },
                            "miDebuggerArgs": {
                                "type": ["string", "array"],
                                "description": "Command-line arguments to pass to the debuggee.",
                                "default": ""
                            },
                            "verboseLogging": {
                                "type": "boolean",
                                "description": "Produce verbose log output.",
                                "default": false
                            },
                            "logFile": {
                                "type": "string",
                                "description": "Absolute path to the file to log interaction with cuda-gdb.",
